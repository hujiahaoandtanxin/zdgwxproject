.container{
  display: flex;
  flex: 1;
  flex-direction: column;
  width: 100%;
  height: 100%;
  padding: 0rpx;
}
.swiper {
  display: flex;
  flex: 1;
  height: 400rpx;
  width: 100%;
}
.swiper image {
  height: 100%;
  width: 100%;
}
.ads{
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  width: 100%;
}
.ad{
  display: flex;
  flex: 1;
  border: 1rpx solid #eee;
  margin-top: 20rpx;
  padding: 30rpx;
  margin: 20rpx;
}
.ad image{
  width: 200rpx;
  height: 200rpx;
}
.ad text{
  display: block;
  flex: 1;
  font-size: 0.9rem;
  margin-left: 12rpx;
}
.texts{
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  padding: 10rpx; 
  width: 100%;
}
.text1{
  flex: 1;
  color: black;
  font-family: "黑体";
  font-weight: 700;
  font-size:x-large;
  padding-left: 100rpx;
}
.text2{
  flex: 1;
  font-size: small;
  color: gray;
  padding-left: 100rpx;
}