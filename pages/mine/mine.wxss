
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: cornflowerblue;
  width: 100%;
  height: 320rpx;
  padding-top: 40rpx; 
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  margin:40rpx; 
  color: white;
}
.myInfo{ 
  display: flex;
  flex-direction: column;
  margin-top: 40rpx;  
}
.info{
 display: flex;
 border: 1px solid #eee;
 width: 100%;
 height: 40px;
 
 font-size: 35rpx;
}
.text{
  flex:1;
  padding-left: 20rpx;
  padding-top: 20rpx;
}
.input{
  flex: 1;
  text-align: right;
  padding-right: 40rpx;
  padding-top: 20rpx;
  color: silver;
}
.info image{
  width: 40rpx;
  height:40rpx;
  margin-left:20rpx;
  margin-top: 25rpx;
}

